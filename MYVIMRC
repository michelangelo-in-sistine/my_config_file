set nocompatible
set backspace=indent,eol,start      "解决backspace不响应
set nu
set incsearch
set hlsearch
set ignorecase
set cursorline
set cursorcolumn
syntax enable
syntax on

color desert
color delek 

set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set textwidth=0
set autoindent
set noswapfile
setlocal list
set listchars=tab:>~,trail:. 

set encoding=utf8
set guifont=Inziu\ Iosevka\ SC:h12
source $VIMRUNTIME/delmenu.vim        "解决菜单乱码
source $VIMRUNTIME/menu.vim

let mapleader=";"
map <leader><leader>o :vs $MYVIMRC<CR>
map <leader><leader>r :so $MYVIMRC<CR>

